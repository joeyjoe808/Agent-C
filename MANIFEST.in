# Include documentation
include README.md
include ASKME.md
include AGENTS.md
include ARIA.md
include LICENSE

# Include configuration files
include pyproject.toml
include requirements.txt
include .env.example

# Include project instructions
include project-overview.md

# Include all markdown files in agent directories
recursive-include agency_code_agent *.md
recursive-include planner_agent *.md
recursive-include subagent_example *.md

# Include all Python packages
recursive-include agency_code_agent *.py
recursive-include planner_agent *.py
recursive-include subagent_example *.py
recursive-include tools *.py
recursive-include safety *.py
recursive-include shared *.py

# Exclude tests from distribution (users don't need them)
recursive-exclude tests *

# Exclude development artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
